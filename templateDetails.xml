<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="template">
    <name>WSJ - New design</name>
    <creationDate>2014-03-01</creationDate>
    <author>Tomas Kormanak</author>
    <authorEmail>kormik@kormik.net</authorEmail>
    <authorUrl>http://www.kormik.net</authorUrl>
    <copyright>Jamboree.cz 2014</copyright>
    <license>GNU/GPL</license>
    <version>1.0.2</version>
    <description>My New Template</description>
    <files>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <folder>images</folder>
        <folder>css</folder>
    </files>
    <positions>
        <position>main-content</position>
        <position>box-left</position>
        <position>box-center</position>
        <position>box-right</position>
        <position>menu</position>    
        <position>footer</position>
    </positions>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="variant" type="list" default="nature"
                       label="Template variant"
                       description="Template variant"
                       filter="word">
                    <option value="homepage">Homepage</option>
                    <option value="page">Page</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
